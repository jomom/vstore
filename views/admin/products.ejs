<%- include('../layouts/adminHeader'); -%>

<h2 class="page-title pt-3">Products</h2>
<br />
<a href="/admin/products/add_product" class="btn btn-primary"> Add product </a>
<br />
<br />

<% if (count > 0 ) { %>
 

<table class="table table-striped sorting alignmiddle">
  <thead>
    <tr class="home">
      <th>Product</th>
      <th>Price</th>
      <th>Categorey</th>
      <th>Product Img</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(element => { %>
    <tr>
      <td>
        <%= element.title %>
      </td>
      <td>
        Â£<%= parseFloat(element.price).toFixed(2) %>
      </td>
      <td>
        <%= element.categorey %>
      </td>
      <td>
        <% if (element.image == "") { %>

        <img id="noImage" src="/images/noImage.jpg" alt="" style="width: 100px;height: 100px;" />

        <% } else { %>

        <img id="noImage" src="/images/product_imgs/<%= element._id %>/<%= element.image %>" alt="" style="width: 100px;height: 100px;"/>
        <% }  %>
      </td>

      <td><a href="/admin/products/edit-product/<%= element._id  %>">Edit</a></td>
      
      <td>
        <a
          class="confirmDeletion"
          href="/admin/products/delete-product/<%= element._id %>"
          >Delete</a
        >
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<% } else{ %>

<h3 class="text-center" > There are No products </h3>

<% } %> 



